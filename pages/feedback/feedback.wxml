<!--pages/feedback/feedback.wxml-->
<!-- navbar -->
<cu-custom bgColor="bg-green" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">意见反馈</view>
</cu-custom>


<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
<view class="cu-form-group">
  <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="contentInput" placeholder="感谢您的每一条意见和建议，如果被采纳，将有机会获得终身最高福利奖励。"></textarea>
</view>


<view class="cu-form-group">
  <view class="title">联系方式</view>
  <input placeholder="可选" bindinput="contactInput"></input>
</view>
</view>


<view class="flex flex-direction margin-lr">
  <button class="cu-btn bg-green lg" bindtap="submit">提交</button>

</view>